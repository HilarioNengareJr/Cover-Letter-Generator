doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Cover Letter Generator

    // Favicon
    link(rel="shortcut icon", href="/favicon.svg", type="image/svg+xml")

    // Custom CSS link
    link(rel="stylesheet", href="/stylesheets/style.css")

    // Google Font link
    link(rel="preconnect", href="https://fonts.googleapis.com")
    link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap", rel="stylesheet")

  body
    // Main Container
    .container
      main.main
        article.app-box
          // Header
          header.header
            div
              h1.h1.header-title Welcome to Cover Letter Generator

              p.header-time(data-header-time) Enter

            div.dropdown-wrapper
              button.menu-btn(aria-label="Toggle menu", data-menu-toggler)
                ion-icon(name="ellipsis-horizontal", aria-hidde="true")

              // Dropdown menu
              .dropdown-container(data-menu)
                ul.dropdown-list
                  li.dropdown-item
                    p.item-title Theme

                    // Theme buttons
                    .theme-btn-group
                      button.theme-btn.active(style="--hue: 227", data-theme-btn, data-hue="227")
                      button.theme-btn(style="--hue: 298", data-theme-btn, data-hue="298")
                      button.theme-btn(style="--hue: 344", data-theme-btn, data-hue="344")
                      button.theme-btn(style="--hue: 2", data-theme-btn, data-hue="2")
                      button.theme-btn(style="--hue: 153", data-theme-btn, data-hue="153")
                      button.theme-btn(style="--hue: 177", data-theme-btn, data-hue="177")
                      button.theme-btn(style="--hue: 206", data-theme-btn, data-hue="206")

                  li
                    button.dropdown-link(data-modal-toggler, data-menu-toggler)
                      ion-icon(name="information-circle-outline")

                      span.span App info

          // Main
         
          ul.task-list(data-task-list)

          form(action="/" method='POST')
            .input-wrapper(title="Add details")
              input.input-field(type="text", name="task", aria-label="Add task", maxlength="500", placeholder="Try Pasting the description, emphasis", data-task-input)

              span.input-text Add

              .input-icon
                ion-icon(name="add-outline", class="add-icon", aria-hidden="true")
                ion-icon(name="ellipse-outline", class="circle-icon", aria-hidden="true")

            button.btn.hide(data-submit-btn) Submit 

        // App Info Modal
        .app-info(data-info-modal)
          .modal
            h2.modal-title App info

            ul.modal-list
              li.modal-item
                strong.strong Version:
                span.span 1.0.0

              li.modal-item
                strong.strong Publish:
                span.span 06 February 2024

              li.modal-item
                strong.strong Last Update:
                span.span 06 February 2024

              li.modal-item
                strong.strong Created by:
                a.span(href="https://github.com/HilarioNengareJr") Hilario Junior Nengare

            button.modal-btn(data-modal-toggler) Ok

    // Custom JS link
    script(src="/javascripts/script.js")

    // Ionicon link
    script(type="module", src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js")
    script(nomodule, src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js")
